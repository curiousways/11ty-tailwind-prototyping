<div class="bg-idg-blue-mid py-10 bg-fern--4 py-20">
  <div class="container mx-auto px-12 xxl:px-0">
    {% set titleTitle = ctaTitle %}
    {% set titleJustify = "justify-start" %}
    {% set titleSubtitle = ctaSubtitle %}
    {% set titleTitleColor = "text-idg-blue" %}
    {% set titleTitlePosition = "hidden" %}

    <div class="lg:flex lg:items-center lg:justify-between">

      <div>
        {% include 'partials/title.njk' %} 
        {% if titleSubtitle %}
          <div class="font-bold text-white mt-2">
            {{ titleSubtitle | safe }}
          </div>
        {% endif %}
      </div>  

      <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
        <div class="inline-flex">
          <a href="#" class="btn">
            {% if ctaBtnText %}
              {{ ctaBtnText }}
            {% else %}
              Contact IDG
            {% endif %}
          </a>
        </div>
      </div>

    </div>
  </div>
</div>