<div class="flex flex-col overflow-hidden">
  <div class="flex-shrink-0">
    <img class="{% if cardHeight %} {{ cardHeight }} {% else %} h-60 {% endif %} w-full object-cover {% if cardCurve %} {{ cardCurve }} {% else %} rounded-tl-4xl {% endif %}" src="{{ cardImg }}" alt="">
  </div>
  <div class="flex-1 {{ cardBg }} px-6 pt-6 pb-10 flex flex-col justify-between h-full">

    <div class="flex flex-col flex-1 h-full">

      <a href="#" class="block mt-2 pb-10">
        <p class="text-xl font-bold text-idg-blue">
          {{ cardTitle }}
        </p>
        <span class="block text-4xl text-idg-blue">&mdash;</span>
        <p class="mt-3 text-base">
          {{ cardText }}
        </p>
      </a>

      <div class="mt-auto sm:flex sm:justify-center lg:justify-start">
        <div class="inline-flex">
          <a href="#" class="btn">
            Learn more
          </a>
        </div>
      </div>

    </div>

  </div>
</div>