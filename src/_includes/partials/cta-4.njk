<div class="bg-idg-blue py-10">
  <div class="container mx-auto px-12 xxl:px-0 lg:flex lg:items-center lg:justify-between">
    {% set titleTitle = "Our Clients" %}
    {% set titleTitlePosition = "hidden" %}
    {% set titleTitleColor = "text-white" %}
    {% include 'partials/title.njk' %} 
    <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
      <div class="inline-flex">
        <a href="#" class="btn--white">
          View all clients
        </a>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-12 xxl:px-0 mt-10">

    <ul class="lg:flex lg:items-center">
      {% for icon in clients.items %}:
      <li class="md:flex-initial mb-10 md:mb-0">
        <img class="block mr-20" src="/images/{{ icon.url }}" alt="">
      </li>
      {% endfor %}
    </ul>

  </div>
    


</div>